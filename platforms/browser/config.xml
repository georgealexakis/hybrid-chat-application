<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hybridapp.chatapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Chat Application</name>
    <description>
        This is a hybrid application made with phonegab, that it uses MQTT to connect to the broker and then to
        communicate to other users.
    </description>
    <author email="geosalexs@gmail.com" href="mailto:geosalexs@gmail.com">
        George Alexakis
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access launch-external="yes" origin="*" />
</widget>
